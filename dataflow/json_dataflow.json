{
	"name": "json_dataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Json_dataset",
						"type": "DatasetReference"
					},
					"name": "readjson"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ADLS_output_directory",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "flatten1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          firstName as string,",
				"          lastName as string,",
				"          gender as string,",
				"          age as integer,",
				"          address as (streetAddress as string, city as string, state as string),",
				"          skills as string[],",
				"          phoneNumbers as (type as string, number as string)[]",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'singleDocument') ~> readjson",
				"readjson foldDown(unroll(skills),",
				"     mapColumn(",
				"          firstName,",
				"          lastName,",
				"          gender,",
				"          age,",
				"          skills,",
				"          phoneNumbers",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> flatten1",
				"flatten1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Name as string,",
				"          Category as string,",
				"          Status as string,",
				"          Error as string",
				"     ),",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}